<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".MenuAddActivity">

    <ImageView
        android:id="@+id/iv"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="false"
        app:srcCompat="@drawable/beans"
        tools:ignore="SpeakableTextPresentCheck" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp" />

    <EditText
        android:id="@+id/addMenuName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:ems="10"
        android:fontFamily="@font/nanumbarungothic"
        android:hint="상품명을 입력해주세요(한글/영어)"
        android:inputType="text"
        android:textColor="#000000"
        android:textColorHint="#BBAB8C" />

    <EditText
        android:id="@+id/addPrice"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:ems="10"
        android:fontFamily="@font/nanumbarungothic"
        android:hint="가격을 입력해주세요"
        android:inputType="number"
        android:textColorHint="#BBAB8C" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:fontFamily="@font/nanumbarungothic"
            android:text="운영여부 :"
            android:textColor="#000000"
            android:textColorHint="#BBAB8C"
            android:textSize="18sp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/switchRun"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#BBAB8C"
            android:checkable="true"
            android:checked="true"
            android:fontFamily="@font/nanumbarungothicbold"
            android:text="판매중"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:checkedIconTint="#FAEED1"
            app:chipBackgroundColor="#BBAB8C" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="#FAEED1"
        android:orientation="horizontal"
        android:textAlignment="center">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:layout_weight="1"
            android:fontFamily="@font/nanumbarungothicbold"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="분류"
            android:textAlignment="center"
            android:textColor="#232323"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:layout_weight="1"
            android:fontFamily="@font/nanumbarungothicbold"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="상품명"
            android:textAlignment="center"
            android:textColor="#232323"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:layout_weight="1"
            android:fontFamily="@font/nanumbarungothicbold"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="판매가"
            android:textAlignment="center"
            android:textColor="#232323"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:layout_weight="1"
            android:fontFamily="@font/nanumbarungothicbold"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="운영"
            android:textAlignment="center"
            android:textColor="#232323"
            android:textSize="16dp"
            android:textStyle="bold" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="1"
        android:background="#FDF7E4"
        tools:listitem="@layout/menu_row" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="10dp"
        android:clickable="true">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:background="@drawable/round_border"
            android:fontFamily="@font/nanumbarungothicbold"
            android:text="임시저장"
            android:textAlignment="center"
            android:textColor="#232323"
            android:textSize="20dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnComplete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:background="@drawable/round_border"
            android:fontFamily="@font/nanumbarungothicbold"
            android:text="등록완료"
            android:textAlignment="center"
            android:textColor="#232323"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>