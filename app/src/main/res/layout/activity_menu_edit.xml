<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:textAlignment="center"
    tools:context=".MenuEditActivity">


    <ImageView
        android:id="@+id/iv"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:focusableInTouchMode="false"
        app:srcCompat="@drawable/beans"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/editCategory"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="8dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:fontFamily="@font/nanumbarungothic"
        android:hint='상품분류'
        android:inputType="text"
        android:textColor="#BBAB8C"
        android:textColorHint="#BBAB8C" />

    <EditText
        android:id="@+id/editMenuId"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="8dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:fontFamily="@font/nanumbarungothic"
        android:hint='상품코드'
        android:inputType="text"
        android:textColor="#BBAB8C"
        android:textColorHint="#BBAB8C" />

    <EditText
        android:id="@+id/editMenuName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:fontFamily="@font/nanumbarungothic"
        android:hint="상품명을 입력해주세요(한글/영어)"
        android:inputType="text"
        android:textColor="#000000"
        android:textColorHint="#BBAB8C" />

    <EditText
        android:id="@+id/editPrice"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:fontFamily="@font/nanumbarungothic"
        android:hint="가격을 입력해주세요"
        android:inputType="number"
        android:textColor="#000000"
        android:textColorHint="#BBAB8C" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:fontFamily="@font/nanumbarungothic"
            android:text="운영여부 :"
            android:textColor="#000000"
            android:textColorHint="#BBAB8C"
            android:textSize="18sp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/switchRun"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#BBAB8C"
            android:checkable="true"
            android:checked="true"
            android:fontFamily="@font/nanumbarungothicbold"
            android:text="판매중"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:checkedIconTint="#FAEED1"
            app:chipBackgroundColor="#BBAB8C" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/round_border"
            android:textColor="#232323"
            android:textSize="20dp"
            android:id="@+id/btnUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:fontFamily="@font/nanumbarungothicbold"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="수정"
            android:textAlignment="center" />

        <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/round_border"
            android:textColor="#232323"
            android:textSize="20dp"
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"

            android:fontFamily="@font/nanumbarungothicbold"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="삭제"
            android:textAlignment="center"
             />
    </LinearLayout>
</LinearLayout>