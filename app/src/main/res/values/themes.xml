<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CafeManagement" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/beige2</item>
        <item name="colorPrimaryVariant">@color/beige1</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brown</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- 재고관리 EditText Style -->
    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="backgroundTint">@color/beige2</item>
        <item name="android:textSize">18sp</item>
        <item name="android:singleLine">true</item>
        <item name="singleLine">true</item>
        <item name="maxLines">1</item>
        <item name="fontFamily">@font/nanumbarungothic</item>
    </style>

    <!-- 재고관리 datepicker Style-->
    <style name="datePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/beige1</item>
        <item name="fontFamily">@font/nanumbarungothic</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/datePickerStyle.Button</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/datePickerStyle.Button</item>
    </style>

    <style name="datePickerStyle.Button" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/beige1</item>
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/nanumbarungothicbold</item>
    </style>

    <!-- 상품분류 팝업 다이얼로그 테마 추가 -->
    <style name="Theme.MyDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="fontFamily">@font/nanumbarungothic</item>
    </style>
</resources>